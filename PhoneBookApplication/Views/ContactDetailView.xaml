<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:PhoneBookApplication.ViewModels"
             x:Class="PhoneBookApplication.Views.ContactDetailView">

    <ContentPage.BindingContext>
        <viewModels:ContactDetailViewModel />
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit Contact" Command="{Binding ToggledCommand}" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0061ff" Offset="0" />
            <GradientStop Color="#60efff" Offset="1" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Profile Picture Row -->
            <RowDefinition Height="Auto" />
            <!-- Button Row -->
            <RowDefinition Height="Auto" />
            <!-- Entry Rows -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image x:Name="ProfilePictureEntry"
               Source="{Binding Contact.ProfilePicture}"
               Grid.Row="0"
               Aspect="AspectFit"
               WidthRequest="200"
               HeightRequest="200"
               HorizontalOptions="Center" />

        <StackLayout Orientation="Horizontal"
                     Grid.Row="1"
                     HorizontalOptions="Center"
                     >
            <Button Text="Choose Picture"
                    BackgroundColor="LightYellow" 
                    Command="{Binding ChooseCommand}"
                    Margin="5" />
            <Button Text="Take Picture"
                    BackgroundColor="LightYellow"
                    Command="{Binding TakeCommand}"
                    Margin="5" />
        </StackLayout>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Text="First Name:"
                   VerticalOptions="Center"
                   VerticalTextAlignment="Center" />
            <Entry x:Name="FirstNameEntry"
                   Text="{Binding Contact.FirstName}"
                   IsEnabled="{Binding _isEditable}"
                   Placeholder="John"
                   Grid.Column="1"
                   Margin="10,0,0,0" />
        </Grid>

        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Text="Last Name:"
                   VerticalOptions="Center"
                   VerticalTextAlignment="Center" />
            <Entry x:Name="LastNameEntry"
                   Text="{Binding Contact.LastName}"
                   IsReadOnly="{Binding _readOnly}"
                   Placeholder="Doe"
                   Grid.Column="1"
                   Margin="10,0,0,0" />
        </Grid>

        <Grid Grid.Row="4" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Text="Email:"
                   VerticalOptions="Center"
                   VerticalTextAlignment="Center" />
            <Entry x:Name="EmailEntry"
                   Text="{Binding Contact.Email}"
                   IsReadOnly="{Binding _readOnly}"
                   Placeholder="johndoe@example.com"
                   Grid.Column="1"
                   Margin="10,0,0,0" />
        </Grid>

        <Grid Grid.Row="5" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Text="Address:"
                   VerticalOptions="Center"
                   VerticalTextAlignment="Center" />
            <Entry x:Name="AddressEntry"
                   Text="{Binding Contact.Address}"
                   IsReadOnly="{Binding _readOnly}"
                   Placeholder="123 Main St"
                   Grid.Column="1"
                   Margin="10,0,0,0" />
        </Grid>

        <Button Text="Update Contact"
                BackgroundColor="LightGreen"
                Command="{Binding UpdateCommand}"
                IsVisible="{Binding _isEditable}"
                Grid.Row="6"
                Margin="10,0,10,10" />

        <Button Text="Delete Contact"
                Command="{Binding DeleteCommand}"
                IsVisible="{Binding _isEditable}"
                BackgroundColor="PaleVioletRed"
                Grid.Row="7"
                Margin="10,0,10,10" />
    </Grid>
</ContentPage>
